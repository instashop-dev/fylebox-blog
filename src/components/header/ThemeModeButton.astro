---
import ToggleDarkIcon from "../icons/ToggleDarkIcon.astro";
import ToggleLightIcon from "../icons/ToggleLightIcon.astro";
---

<button
  id="theme-toggle"
  type="button"
  aria-label="Toggle color scheme"
  class="text-gray-500 hover:bg-primary-500 focus:outline-none focus:ring-4 focus:ring-gray-200 rounded-lg text-sm p-2.5"
>
  <ToggleDarkIcon />
  <ToggleLightIcon />
</button>
