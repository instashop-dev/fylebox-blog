---
import HeaderLink from "./HeaderLink.astro";
import Hamburger from "./Hamburger.astro";
import { LOGO_FILE_NAME, HEADER_TITLE, SITE_URL } from "../../consts";

const baseUrl = import.meta.env.BASE_URL;
---

<header role="banner">
  <nav id="navigation" class="bg-gray-50 border-gray-200" role="navigation" aria-label="Main navigation">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-left mx-auto p-4">
      <a href={SITE_URL} class="flex items-center space-x-3 rtl:space-x-reverse" aria-label="CSVBox Blog Home">
        <img src={`${baseUrl}/${LOGO_FILE_NAME}`} width="32" height="32" class="h-8" alt="CSVBox logo" />
        <span class="text-md md:text-2xl font-semibold whitespace-nowrap">{HEADER_TITLE}</span>
      </a>    
       <a
            href="https://csvbox.io"            
            rel="noopener noreferrer"
            class="block pl-4 px-4 rounded-sm font-bold text-gray-900 md:border-0 hover:text-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
            aria-label="Visit CSVBox main website"
          >
            CSVbox
          </a>
           <a
            href="/"            
            rel="noopener noreferrer"
            class="block pl-4 px-4 rounded-sm font-bold text-gray-900 md:border-0 hover:text-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
            aria-label="Go to blog home"
          >
            Blog
          </a> 
      
    </div>
  </nav>
</header>

<script>
  // Force light theme only - remove dark mode functionality
  function initLightThemeOnly() {
    // Always remove dark class and set light theme
    document.documentElement.classList.remove('dark');
    localStorage.setItem('theme', 'light');
    localStorage.setItem('color-theme', 'light');
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLightThemeOnly);
  } else {
    initLightThemeOnly();
  }
</script>
